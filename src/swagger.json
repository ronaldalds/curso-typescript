{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "My API",
        "description": "This is a sample API",
        "contact": {
            "email": "ronald.ralds@gmail.com"
        }
    },
    "paths": {
        "/categories": {
            "post": {
                "tags": ["Category"],
                "summary": "Create a category",
                "description": "Create a new category",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Category Name",
                                    "description": "Category description"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Category Already Exists"
                    }
                }
            }
        }
    }
}